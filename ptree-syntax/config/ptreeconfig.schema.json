{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ptree configuration",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "$schema": {
      "type": "string"
    },
    "ptree": {
      "type": "string"
    },
    "style": {
      "type": "string",
      "enum": [
        "unicode",
        "ascii"
      ]
    },
    "NAME_TYPES": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "additionalProperties": true,
        "properties": {
          "description": {
            "type": "string"
          },
          "word_delimiter": {
            "type": [
              "string",
              "null"
            ]
          },
          "allowed_version_delimiters": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "pattern": {
            "type": "string"
          },
          "examples": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "with_number_examples": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "SEPERATION_DELIMITERS": {
      "description": "Legacy spelling. Prefer SEPARATION_DELIMITERS.",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "SEPARATION_DELIMITERS": {
      "description": "Canonical delimiter list (preferred spelling).",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "ENTITY_NAME_TYPES": {
      "type": "object",
      "description": "Maps entity types to arrays of allowed NAME_TYPE identifiers.",
      "properties": {
        "ROOT": {
          "type": "array",
          "description": "Allowed NAME_TYPEs for root labels (nodes ending with //).",
          "items": { "type": "string" }
        },
        "DIR": {
          "type": "array",
          "description": "Allowed NAME_TYPEs for directory names (nodes ending with /).",
          "items": { "type": "string" }
        },
        "FILE": {
          "type": "array",
          "description": "Allowed NAME_TYPEs for file names (stem portion before extension).",
          "items": { "type": "string" }
        },
        "EXT": {
          "type": "array",
          "description": "Allowed NAME_TYPEs for file extensions.",
          "items": { "type": "string" }
        },
        "META": {
          "type": "array",
          "description": "Allowed NAME_TYPEs for metadata nodes (nodes ending with //).",
          "items": { "type": "string" }
        },
        "NUMERAL": {
          "type": "array",
          "description": "Allowed NAME_TYPEs for Roman numeral prefixes in directory names.",
          "items": { "type": "string" }
        }
      },
      "additionalProperties": {
        "type": "array",
        "items": {
          "type": "string"
        }
      }
    },
    "RULES": {
      "type": "object",
      "additionalProperties": true
    },
    "FILE_EXTENSION_SPLIT": {
      "type": "string",
      "description": "How to determine the 'file base' when validating FILE NAME_TYPES. 'lastDot' treats the last segment as extension; 'firstDot' applies NAME_TYPE to the stem before the first dot and treats the remainder as (possibly multi-part) extension.",
      "enum": [
        "lastDot",
        "firstDot"
      ],
      "default": "lastDot"
    },
    "profile": {
      "type": "string",
      "description": "Built-in config profile to use as the base ruleset when no workspace config is provided. 'default' is flexible; 'spec' is the canonical opinionated ruleset.",
      "enum": [
        "default",
        "spec"
      ],
      "default": "default"
    }
  }
}
